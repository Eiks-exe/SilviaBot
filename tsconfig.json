{
  "compilerOptions": {
    "baseUrl": ".", //
    "outDir": "build/", //Sortie compilation
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es2018",
      "esnext.asynciterable"
    ],
    "sourceMap": true, 
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src", //Source
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "include": [
    "src"
  ]
}
